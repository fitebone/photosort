<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/row_padding_vertical"
    android:paddingStart="20dp"
    android:paddingTop="@dimen/row_padding_vertical">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/albumCheck"
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/albumPreview"
        android:contentDescription="Album Preview Image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="45dp"
        android:layout_alignStart="@id/albumCheck"/>

    <TextView
        android:id="@+id/albumTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/albumPreview"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp" />

    <TextView
        android:id="@+id/albumImageCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/albumPreview"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:layout_below="@id/albumTitle" />

</RelativeLayout>